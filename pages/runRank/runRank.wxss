page {
  background-color: #f5f5f5;
}

.top-three {
  width: 100%;
  height: 260rpx;
  background-color: white;
  display: flex;
  justify-content: space-around;
  padding-top: 50rpx;
  margin-bottom: 10rpx;
  text-align: center;
}

.top-three image {
  background-color: #f5f5f5;
}

.first, .second, .third {
  position: relative;
}

.first view, .second view, .third view {
  width: 120rpx;
  text-align: center;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.first view {
  min-width: 254rpx;
  max-width: 288rpx;
}

.first-avator {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}

.first-avator::after {
  width: 44rpx;
  height: 34rpx;
  content: '';
  background-image: url("http://47.101.136.23:8080/sport/image/162178153433303759.png");
  background-size: 44rpx 34rpx;
  position: absolute;
  top: -16rpx;
  right: 46rpx;
}

.third-avator::after {
  width: 44rpx;
  height: 34rpx;
  content: '';
  background-image: url("http://47.101.136.23:8080/sport/image/732016195144173584.png");
  background-size: 44rpx 34rpx;
  position: absolute;
  top: -16rpx;
  right: -12rpx;
}

.second-avator::after {
  width: 44rpx;
  height: 34rpx;
  content: '';
  background-image: url("http://47.101.136.23:8080/sport/image/360515745632216251.png");
  background-size: 44rpx 34rpx;
  position: absolute;
  top: -16rpx;
  right: -12rpx;
}

.first > view {
  font-size: 40rpx;
  color: #333;
  text-align: center;
}

.second-avator, .third-avator {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}

.second > view, .third > view {
  font-size: 30rpx;
  color: #666;
  text-align: center;
}

.tab-head {
  margin-bottom: 24rpx;
  text-align: center;
}

.no-last-tab-title {
  margin-right: 224rpx;
}

.selected-tab-title {
  font-size: 34rpx;
  color: #fecc19;
  border-bottom: 4rpx solid #fecc19;
}

.unseleted-tab-title {
  font-size: 34rpx;
  color: #999;
}

.club-item {
  width: 100%;
  height: 120rpx;
  background-color: white;
  border-bottom: 2rpx solid #eee;
  display: flex;
  flex-wrap: nowrap;
}

.left-club-item {
  flex-basis: 100%;
  display: flex;
  align-items: center;
}

.rank-num {
  font-size: 30rpx;
  color: #333;
  padding-left: 50rpx;
}

.club-item image {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  margin-left: 30rpx;
  margin-right: 30rpx;
}

.top-clubs {
  font-size: 30rpx;
  color: #09bb07;
}

.my-club {
  font-size: 30rpx;
  color: #ff4646;
}

.other-club-name {
  font-size: 30rpx;
  color: #333;
}

.right-club-item {
  flex-basis: 100%;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.rank-in-club {
  font-size: 24rpx;
  color: #333;
}

.steps {
  font-size: 30rpx;
  color: #333;
  width: 190rpx;
  margin-right: 30rpx;
  display: flex;
  justify-content: flex-end;
}

.word-in-bottom {
  margin-top: 20rpx;
  font-size: 24rpx;
  color: #999;
  text-align: center;
}
