/* pages/runteam/joinTeam/joinTeam.wxss */

.more-text {
  font-size: 24rpx;
  color: #999;
  line-height: 30rpx;
}

.clearfix {
  content: "";
  display: block;
  clear: both;
}

.float-left {
  float: left;
}

.float-right {
  float: right;
}

.logo-wrap {
  /* height: 242rpx; */
  text-align: center;
  padding: 30rpx 0;
  position: relative;
  border-bottom: 2rpx solid #f5f5f5;
}

.logo {
  margin: 20rpx 0;
  border-radius: 50%;
  background-color: #ddd;
  width: 200rpx;
  height: 200rpx;
}

.team-name {
  font-size: 50rpx;
  color: #333;
}

.position-more {
  position: absolute;
  top: 20rpx;
  right: 48rpx;
}

.more-img {
  height: 30rpx;
  vertical-align: middle;
  width: 20rpx;
  margin-left: 20rpx;
}

.bottomView {
  width: 690rpx;
  margin: 20rpx auto 100rpx;
}

.info-wrap {
  border-bottom: 2rpx solid #f5f5f5;
  margin-top: 20rpx;
  padding-left: 100rpx;
  padding-bottom: 20rpx;
  display: flex;
  flex-flow: row wrap;
  justify-content: center;
  align-content: flex-start;
  align-items: flex-start;
}

.info-wrap view {
  height: auto;
  width: 50%;
}

.info-wrap text {
  font-size: 24rpx;
  line-height: 30rpx;
  display: inline-block;
}

.label {
  color: #999;
}

.text {
  margin-left: 10rpx;
  color: #333;
  /* width: 200rpx; */
}

.row-wrap {
  border-bottom: 2rpx solid #f5f5f5;
  margin-top: 20rpx;
}

.row-label {
  margin-left: 30rpx;
  font-weight: 600;
  font-size: 30rpx;
  color: #333;
}

.row-cnt {
  margin: 20rpx 58rpx 50rpx;
  font-size: 28rpx;
  color: #333;
  display: block;
}
